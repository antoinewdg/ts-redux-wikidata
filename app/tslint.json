{
  "extends": "tslint:recommended",
  "linterOptions": {
    "exclude": ["**/dist/*", "**/*.js"]
  },
  "rules": {
    "max-line-length": { "options": [100] },
    "quotemark": false,
    "interface-name": false,
    "object-literal-sort-keys": false,
    "variable-name": false,
    "class-name": false,
    "member-access": false,
    "ordered-imports": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "always"
        },
        "esSpecCompliant": true
      }
    ],
    "max-classes-per-file": false
  },
  "defaultSeverity": "warning"
}
